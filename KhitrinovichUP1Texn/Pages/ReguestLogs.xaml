<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="KhitrinovichUP1Texn.Pages.ReguestLogs"
      Title="Заявки" Background="White" av:DesignHeight="267.281" av:DesignWidth="530.14">
    <Grid Margin="20">
        <DataGrid x:Name="DGRequestLogs" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,20,20,20" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заявка" Binding="{Binding Request.request_id}" Width="*" />
                <DataGridTextColumn Header="Дата изменения" Binding="{Binding date_changed}" Width="*" />
                <DataGridTextColumn Header="Комментарий" Binding="{Binding comment}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
